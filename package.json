{
	"name": "observatory",
	"version": "0.3.0",
	"description": "Disk usage analyzer",
	"main": "target/main/index.js",
	"renderer": "target/renderer/index.html",
	"author": "McKayla Washburn",
	"license": "MIT",
	"repository": "partheseas/observatory",
	"bugs": "https://github.com/partheseas/observatory/issues",
	"config": {
		"forge": "forge.config.js"
	},
	"targets": {
		"main": {
			"context": "electron-main",
			"engines": {
				"electron": ">=8.x.x"
			}
		},
		"renderer": {
			"context": "electron-renderer",
			"publicUrl": ".",
			"engines": {
				"electron": ">=8.x.x"
			}
		}
	},
	"dependencies": {
		"drivelist": "^8.0.6",
		"electron-squirrel-startup": "^1.0.0",
		"gardens": "^4.2.0",
		"react": "^16.13.0",
		"react-dom": "^16.13.0"
	},
	"devDependencies": {
		"@electron-forge/cli": "^6.0.0-beta.50",
		"@electron-forge/maker-dmg": "^6.0.0-beta.50",
		"@electron-forge/maker-squirrel": "^6.0.0-beta.50",
		"@types/react": "^16.9.23",
		"@types/react-dom": "^16.9.5",
		"electron": "^8.1.1",
		"parcel": "^2.0.0-nightly.183",
		"prettier": "^2.0.2",
		"sass": "^1.26.3",
		"source-map-support": "^0.5.12",
		"typescript": "^3.8.3"
	},
	"scripts": {
		"build": "yarn build:main && yarn build:renderer",
		"build:main": "parcel build --target main src/main/index.ts",
		"build:renderer": "parcel build --target renderer src/renderer/index.html",
		"dev": "yarn build && electron-forge start",
		"fmt": "prettier src/**/*.{html,js,scss,ts,tsx} *.config.js package.json *.md *.yml --write",
		"forge": "yarn build && electron-forge make",
		"lint": "eslint **/*.js"
	}
}
