{
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"repository": "https://github.com/partheseas/observatory",
	"bugs": "https://github.com/partheseas/observatory/issues",
	"devDependencies": {
		"@mckayla/eslint-plugin": "^0.1.10",
		"@mckayla/prettier": "^0.8.90",
		"@mckayla/tsconfig": "^0.41.0",
		"electron-build-env": "^0.2.0",
		"eslint": "^7.17.0",
		"neon-cli": "^0.5.3",
		"prettier": "^2.2.1",
