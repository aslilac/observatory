{
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"repository": "https://github.com/partheseas/observatory",
	"bugs": "https://github.com/partheseas/observatory/issues",
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^4.8.0",
		"@typescript-eslint/parser": "^4.8.0",
		"electron-build-env": "^0.2.0",
		"eslint": "^7.14.0",
		"eslint-plugin-react": "^7.21.5",
		"neon-cli": "^0.5.3",
		"prettier": "^2.2.0",
		"source-map-support": "^0.5.19",
		"typescript": "^4.1.2"
	},
	"scripts": {
		"build:observatory": "yarn workspace observatory build",
		"build:telescope": "electron-build-env \"yarn neon build telescope --release\"",
