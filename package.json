{
	"private": true,
	"packages": [
		"packages/*"
	],
	"repository": "https://github.com/partheseas/observatory",
	"bugs": "https://github.com/partheseas/observatory/issues",
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^4.8.0",
		"@typescript-eslint/parser": "^4.8.0",
		"eslint": "^7.14.0",
		"eslint-plugin-react": "^7.21.5",
		"source-map-support": "^0.5.19",
		"typescript": "^4.1.2"
	},
	"scripts": {
		"build": "yarn build:main && yarn build:renderer",
		"build:main": "parcel build --target main src/main/index.ts",
		"build:renderer": "parcel build --target renderer src/renderer/index.html",
		"dev": "yarn build && electron-forge start",
		"fmt": "prettier --ignore-path .gitignore --write .",
		"forge": "yarn build && electron-forge make",
		"lint": "tsc -p . --noEmit && eslint --ext .ts,.tsx .",
		"test": "tsc -p . --noEmit && jest"
	}
}
