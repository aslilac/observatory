{
	"name": "observatory",
	"version": "0.10.0",
	"description": "Disk usage analyzer",
	"main": "target/main/index.js",
	"renderer": "target/renderer/index.html",
	"author": "McKayla Washburn",
	"license": "MIT",
	"repository": "https://github.com/partheseas/observatory",
	"bugs": "https://github.com/partheseas/observatory/issues",
	"targets": {
		"renderer": {
			"context": "browser",
			"publicUrl": ".",
			"engines": {
				"electron": ">= 11.x.x"
			}
		}
	},
	"config": {
		"forge": "forge.config.js"
	},
	"dependencies": {
		"@mckayla/electron-redux": "^3.0.1",
		"drivelist": "^9.0.0",
		"electron-squirrel-startup": "^1.0.0",
		"immer": "^8.0.0",
		"parcel": "^2.0.0-beta.2",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-redux": "^7.2.0",
		"redux": "^4.0.5"
	},
	"devDependencies": {
		"@electron-forge/cli": "^6.0.0-beta.54",
		"@electron-forge/maker-dmg": "^6.0.0-beta.54",
		"@electron-forge/maker-squirrel": "^6.0.0-beta.54",
		"@electron-forge/maker-zip": "^6.0.0-beta.54",
		"@parcel/transformer-sass": "2.0.0-beta.2",
		"@types/react": "^17.0.3",
		"@types/react-dom": "^17.0.2",
		"@types/react-redux": "^7.1.16",
		"electron": "11.1.1",
		"parcel": "^2.0.0-beta.2",
		"sass": "^1.32.8"
	},
	"scripts": {
		"configure": "./scripts/hotwire.sh",
		"configure-win": "./scripts/hotwire.bat",
		"build": "yarn build:main && yarn build:renderer",
		"build:main": "tsc -p tsconfig.build.json",
		"build:renderer": "parcel build --target renderer src/renderer/index.html",
		"dev": "concurrently 'yarn dev:main' 'yarn dev:renderer' 'nodemon'",
		"dev:main": "tsc -p tsconfig.build.json -w -preserveWatchOutput",
		"dev:renderer": "parcel watch --target renderer src/renderer/index.html",
		"forge": "yarn build && electron-forge make",
		"lint": "eslint .",
		"test": "jest",
		"type-check": "tsc -p . --noEmit"
	}
}
